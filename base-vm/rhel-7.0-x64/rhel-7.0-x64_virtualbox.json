{
  "builders": [
    {
      "type": "virtualbox-iso",
      "headless": true,
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "headless" : true,
      "boot_wait": "12s",
      "disk_size": 10140,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "08961a5cb32d2cdf72026bec43876b7f",
      "iso_checksum_type": "md5",
      "iso_url": "iso/rhel-server-7.0-x86_64-dvd.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "20m",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "guest_additions_url" : "https://www.virtualbox.org/download/testcase/VBoxGuestAdditions_4.3.13-94832.iso",
      "guest_additions_sha256" : "7a00c05b85787fa2837b85dfb00ffe674b902810a53fcdb9a32e1526befb7d4f",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "scripts/rhcp.properties",
      "destination": "/home/vagrant/rhcp.properties"
    },
    {
      "type": "file",
      "source": "container/rhel-server-docker-7.0-21.4-x86_64.tar.gz",
      "destination": "/home/vagrant/rhel-server-docker-7.0-21.4-x86_64.tar.gz"
    },
    {
      "execute_command": "echo 'vagrant'|{{.Vars}} sudo -E -S sh '{{.Path}}'",
      "type": "shell",
      "scripts": [
        "scripts/setup.sh",
        "scripts/virtualbox-guest-additions.sh",
        "scripts/vagrant.sh",
        "scripts/compact.sh"
      ]
    }
  ],
  "post-processors": [
    {
     "type": "vagrant",
     "compression_level": 9,
     "output": "rhel-7.0-x64_virtualbox.box",
     "keep_input_artifact": true
    }
  ]
}