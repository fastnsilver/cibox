{
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/ks.cfg<enter><wait>"
      ],
      "headless" : true,
      "boot_wait": "12s",
      "disk_size": 10140,
      "guest_os_type": "RedHat_64",
      "http_directory": "http",
      "iso_checksum": "713ea7847adcdd1700e92429f212721a",
      "iso_checksum_type": "md5",
      "iso_url": "iso/CentOS-7.0-1406-x86_64-DVD.iso",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "20m",
      "shutdown_command": "echo 'shutdown -P now' > shutdown.sh; echo 'vagrant'|sudo -S sh 'shutdown.sh'",
      "guest_additions_url": "https://github.com/fastnsilver/cibox/raw/master/base-vm/supplemental/VBoxGuestAdditions_4.3.13-94832.iso",
      "guest_additions_sha256": "f929afc02f75086913c415123c30e69b522c414c7d9dca8d51d5febd313926ef",
      "virtualbox_version_file": ".vbox_version",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "4096"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "2"
        ]
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "scripts/setup.sh",
        "scripts/virtualbox-guest-additions.sh",
        "scripts/vagrant.sh",
        "scripts/compact.sh"
      ],
      "execute_command": "echo 'vagrant'|{{.Vars}} sudo -E -S sh '{{.Path}}'"
    }
  ],
  "post-processors": [
    {
     "type": "vagrant",
     "compression_level": 9,
     "output": "centos-7.0-x64_virtualbox.box",
     "keep_input_artifact": true
    }
  ]
}